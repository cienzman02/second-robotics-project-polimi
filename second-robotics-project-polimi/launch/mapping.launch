<launch>
  <!-- Use simulated time from the bag -->
  <param name="/use_sim_time" value="true" />

  <!-- Run your odometry TF broadcaster -->
  <node pkg="second-robotics-project-polimi" type="odom_to_tf" name="odom_to_tf" />

  <!-- Run your scan merger node -->
  <node pkg="second-robotics-project-polimi" type="scan_merger" name="scan_merger" />

  <!-- Run GMapping using the merged scan -->
<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
  <remap from="scan" to="scan_front"/>
  <param name="linearUpdate" value="0.3"/>
  <param name="angularUpdate" value="0.3"/>
  <param name="particles" value="40"/>
  <param name="xmin" value="-15"/>
  <param name="ymin" value="-15"/>
  <param name="xmax" value="15"/>
  <param name="ymax" value="15"/>
  <param name="delta" value="0.05"/>
  <param name="maxUrange" value="8.0"/>
  <param name="minimumScore" value="100"/>
</node>


  <!-- Start RViz with your mapping config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find second-robotics-project-polimi)/rviz/mapping.rviz"/>
</launch>