<launch>
  <param name="/use_sim_time" value="true"/>

  <!-- Load map -->
  <arg name="map_file" default="$(find second-robotics-project-polimi)/map/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Launch Stage simulation -->
  <node pkg="stage_ros" type="stageros" name="stage" args="$(find second-robotics-project-polimi)/worlds/navigation.world" />

  <!-- Localization -->
  <include file="$(find second-robotics-project-polimi)/launch/amcl.launch" />

  <!-- Path planner -->
  <include file="$(find second-robotics-project-polimi)/launch/move_base.launch" />

  <!-- Goal controller -->
  <node name="goal_publisher" pkg="second-robotics-project-polimi" type="goal_publisher" output="screen" />

  <!-- RViz view -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find second-robotics-project-polimi)/rviz/navigation.rviz"/>
</launch>
